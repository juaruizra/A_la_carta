<%= form_for(@sale) do |f| %>
  <% if @sale.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@sale.errors.count, "error") %> prohibited this sale from being saved:</h2>

      <ul>
      <% @sale.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>



  <div class="row">
    <div class="table">
      <table class="table table-hover">
        <thead>
          <tr>
            <th><%=%></th>
            <th>Producto</th>
            <th><%=%></th>
            <th>Descripcion</th>
            <th>Valor Unitario</th>
            <th>Cantidad</th>
          </tr>
        </thead>
        <tbody>
          <% @products.each do |product|%>
          <tr>
            <td><%= check_box_tag "products[]", product.id%></td>
            <td><%= product.nombre%></td>
            <td> <%= image_tag product.image.url(:thumb) %></td>
            <td><%= product.descripcion %></td>
            <td><%= price_format product.valor_unitario %></td>
            <td><%= f.number_field :cantidad %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <div class="field">
    <%= f.label :venta_total %><br>
    <%= f.number_field :venta_total %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
