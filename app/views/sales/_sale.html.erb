<%= form_for(@sale, remote: true) do |f| %>

  <div class="row">
    <div class="table">
      <table class="table table-hover">
        <thead>
          <tr>
            <th><%=%></th>
            <th>Producto</th>
            <th><%=%></th>
            <th>Total</th>
          </tr>
        </thead>
        <tbody>
          <% @products.each do |product|%>
          <tr>
            <td><%= check_box_tag "products[]", product.id%></td>
            <td><%= product.nombre%></td>
            <td> <%= image_tag product.image.url(:thumb) %></td>
            <td> <%= f.number_field :cantidad%></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <div class="field">
    <%= f.label :venta_total %><br>
    <%= f.number_field :venta_total %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
