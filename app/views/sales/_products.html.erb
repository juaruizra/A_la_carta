  <div class="box col-xs-3 top-space">
    <div class="box">
      <div class="row">
        <div class="col-xs">
          <div class="box">
            <div class="background-cover product_height" style="background-image:url(<%= product.image.url(:sale) %>);width:100%;">
              <h1><%=check_box_tag "products[]", product.id%></h1>
            </div>
            <div class="relative text-center">
              <h2><%=price_format product.valor_unitario%></h2>
            </div>
          </div>
          <div class="row">
            <div class="col-xs-1">
              <div class="box">
                <%= form_for(@sale) do |f| %>
                <div>
                  <%= f.number_field :cantidad, placeholder: "Cantidad", width: "20%"%>
                </div>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
