<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

    <div>
      <%= f.label :name , "User Name:"%>
      <%= f.text_field :name, autofocus: true,placeholder: "What is your User Name?" %>
    </div>

    <div>
      <%= f.label :email, "Email:"%>
      <%= f.email_field :email,placeholder: "What is your Email?" %>
    </div>

    <div>
      <%= f.label :date_of_birth, "Date of birth:" %>
      <%= f.date_select :date_of_birth, start_year: 1960, end_year: 2000 %>
    </div>

    <div>
      <%= f.label :cargo, "Cargo:" %>
      <% cargo= {'Administrador'=>'administrador','Vendedor'=>'vendedor','Auxiliar'=>'auxiliar'}%>
      <% lista= cargo.sort%>
      <%= f.select :cargo, lista %>

    </div>

    <div>
        <%= f.label :password %>
        <%= f.password_field :password, autocomplete: "off",placeholder:"#{@minimum_password_length} characters minimum"  %>
    </div>

    <div>
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation, autocomplete: "off",placeholder:"#{@minimum_password_length} characters minimum" %>
    </div>

    <div>
      <%= f.radio_button :is_female, 1, checked: @user.is_female?%> <%= f.label :is_female, "Female" %>
      <%= f.radio_button :is_female, 0, checked: !@user.is_female? %> <%= f.label :is_female, "Male" %>
    </div>

    <div>
      <%= f.label :is_admin, "Is Admin (?):" %>
      <%= f.radio_button :is_admin, 1, checked: @user.is_admin?%> <%= f.label :is_admin, "Yes" %>
      <%= f.radio_button :is_admin, 0, checked: !@user.is_admin? %> <%= f.label :is_admin, "No" %>
    </div>

    <div >
      <%= f.submit "Sign up" %>
    </div>
<% end %>

<%= render "devise/shared/links" %>
